.header-view {
  position: fixed;
  top:0;
  width: 100%;
  height: 124px;
  background-color: white;
  z-index: 100;
}
.date-view {
  height: 44px;
  background-color: #F7F7F7;
  align-items: center;
  justify-content: space-between;
}
.data-view_date {
  color: #6d727b;
}
.header-view-info {
  height: 80px;
  align-items: center;
  justify-content: space-between;
 
}

.header-view-info_btn {
  width: 100px;
  height: 36px;
  line-height: 36px;
  border-radius: 18px;
  background-color: #2ECC71;
  color:white;
}

