<!--pages/editGoodsDiscount/editGoodsDiscount.wxml-->
<form bindsubmit="onSave">
  <view class="weui-cells">  
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">打折状况</view>
        </view>
        <view class="weui-cell__bd">
            <input focus="true" type="number" name="discount" class="weui-input" placeholder="请输入商品打折状况" value="{{discount}}"/>
        </view>
    </view>
  </view>

  <button style='margin-top:112rpx;' class="button button_margin_16" type="primary" formType="submit">保存</button>
</form>
